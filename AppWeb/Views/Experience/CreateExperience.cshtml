@using AppWeb.Models
@using AppWeb.Ressources;

@model ExperienceViewModel

<div class="pt-5 bg-dark align-items-center d-flex bg-dark">
    <div class="container py-5 my-5">
        <div class="row">
            @using (Html.BeginForm("CreateExperienceAsync", "Experience", new AjaxOptions { OnSuccess = "onSuccess" }, FormMethod.Post, new { @style = "width:75%;" }))
            {
                <div>
                    <h3 class="display-4 mb-4">@ResourceEN.AddExpProfile</h3>
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.EmployeId)
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(m => m.Intitule)</label>
                        <div class="input-group border-0">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="now-ui-icons shopping_tag-content lg"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(m => m.Intitule, new { @class = "form-control", placeholder = ResourceEN.PlaceHolderExp })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>@Html.DisplayNameFor(m => m.Date)</label>
                        <div class="input-group border-0">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="now-ui-icons ui-1_calendar-60 lg"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(m => m.Date, new { @class = "form-control", type = "date" })
                        </div>
                    </div>

                    <button type="submit" class="btn my-3 btn-lg rounded btn-primary"><i class="now-ui-icons ui-1_simple-add mr-1"></i>@ResourceEN.Add</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function onSuccess() {
        alert();
    }
</script>