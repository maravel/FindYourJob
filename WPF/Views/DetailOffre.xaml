<UserControl x:Class="WPF.Views.DetailOffre"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70px"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="19" FontWeight="Bold">Détail d'une offre</Label>
        
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="3" Orientation="Vertical">
            <Label>Intitulé</Label>
            <TextBox Text="{Binding Intitule}"></TextBox>
            <Label>Date</Label>
            <DatePicker SelectedDate="{Binding Date}"></DatePicker>
            <Label>Salaire</Label>
            <TextBox Text="{Binding Salaire}"></TextBox>
            <Label>Description</Label>
            <TextBox TextWrapping="Wrap" Height="Auto" AcceptsReturn="True" Text="{Binding Description}"></TextBox>
            <Label>Statut</Label>
            <ComboBox ItemsSource="{Binding Statuts}"
                  DisplayMemberPath="Libelle"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding Statut}" />
        </StackPanel>

        <my:ListPostulant Grid.Row="3" Height="Auto" Grid.ColumnSpan="2" DataContext="{Binding ListPostulantViewModel}"></my:ListPostulant>

        <Button Width="40" Height="40" Margin="5" Grid.Row="2" Grid.Column="2" Background="Blue" FontSize="25px" Command="{Binding AjouterOffre}">+</Button>
        
    </Grid>
</UserControl>
